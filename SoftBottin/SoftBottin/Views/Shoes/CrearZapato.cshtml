@model SoftBottin.Models.Shoes.cShoe
@{
    ViewBag.Title = "Crear Zapato";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> lsShoesTypes = ViewBag.lsShoesTypes;
    List<SelectListItem> lsColors = ViewBag.lsColors;
}
<script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.14.0/jquery.validate.min.js"></script>
<script src="http://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/css/bootstrap-select.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/bootstrap-select.min.js"></script>

<!-- (Optional) Latest compiled and minified JavaScript translation files -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.10.0/js/i18n/defaults-*.min.js"></script>


<section class="app-tipos-zapatos">
    <h2>Crear Zapato</h2>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <label for="name">Nombre</label>
                        @Html.TextBoxFor(dina => dina.sName,
                                         new
                                         {
                                             @class = "form-control",
                                             id = "name",
                                             placeholder = "Ingrese Nombre",
                                             maxlength = "100"
                                         })
                        @Html.ValidationMessageFor(model => model.sName)
                        <p class="help-block">Ingrese el nombre del zapato.</p>
                    </div>
                    <div class="form-group">
                        <label for="description">Descripción</label>
                        @Html.TextBoxFor(dina => dina.sDescription,
                                         new
                                         {
                                             @class = "form-control",
                                             id = "description",
                                             placeholder = "Ingrese Descripción",
                                             maxlength = "100"
                                         })
                        @Html.ValidationMessageFor(model => model.sDescription)
                        <p class="help-block">Ingrese la descrpción del zapato.</p>
                    </div>
                    <div class="form-group">
                        <label for="ref">Referencia</label>
                        @Html.TextBoxFor(dina => dina.sRef,
                                         new
                                         {
                                             @class = "form-control",
                                             id = "ref",
                                             placeholder = "Ingrese Referencia",
                                             maxlength = "100"
                                         })
                        @Html.ValidationMessageFor(model => model.sRef)

                        <p class="help-block">Ingrese la referencia del zapato.</p>
                    </div>
                    <div class="form-group">
                        <label for="ref">Costo</label>
                        @Html.TextBoxFor(dina => dina.sCost,
                                         new
                                         {
                                             @class = "form-control",
                                             id = "ref",
                                             placeholder = "Ingrese Costos",
                                             maxlength = "100"
                                         })
                        @Html.ValidationMessageFor(model => model.sCost)

                        <p class="help-block">Ingrese el costo.</p>
                    </div>
                    <div class="form-group">
                        <label for="ref">Precio</label>
                        @Html.TextBoxFor(dina => dina.sPrice,
                                         new
                                         {
                                             @class = "form-control",
                                             id = "ref",
                                             placeholder = "Ingrese Precio",
                                             maxlength = "100"
                                         })
                        @Html.ValidationMessageFor(model => model.sPrice)

                        <p class="help-block">Ingrese el precio.</p>
                    </div>

                    <div class="form-group">
                        <label for="ref">Tipo de zapato</label>
                        @Html.DropDownListFor(mdl => mdl.iShoeType, lsShoesTypes, "Tipo de Zapato", new { @class = "form-control", id = "lsShoesTypes" })
                        <p class="help-block">Seleccione un tipo de zapato.</p>
                    </div>

                    <div class="panel panel-default panel-primary">
                        <div class="panel-heading ">
                            Agregar un color de zapato
                        </div>
                        <div class="panel-body">
                            <div class="form-group">
                                <label for="ref">Seleccione un color</label>
                                @Html.DropDownListFor(mdl => mdl.iColor, lsColors, "Color", new { @class = "form-control", id = "lsColors" })
                                @Html.ValidationMessageFor(model => model.iColor)

                                <p class="help-block">Seleccione un color.</p>
                            </div>
                            <div class="form-group">
                                <label for="ref">Seleccione las fotos</label>
                                <div class="row">
                                    <div class="col-sm-6 col-md-4">
                                        <div class="thumbnail">
                                            <img src="data:image/svg+xml;base64," alt="...">
                                            <div class="caption">
                                                <h3>Foto frontal</h3>
                                                <p>Adjuntar foto</p>
                                                <p>
                                                    <a href="#" class="btn btn-info" role="button">Añadir</a>
                                                    <a href="#" class="btn btn-info" role="button">Eliminar</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-4">
                                        <div class="thumbnail">
                                            <img src="data:image/svg+xml;base64," alt="...">
                                            <div class="caption">
                                                <h3>Foto lateral</h3>
                                                <p>Adjuntar foto</p>
                                                <p>
                                                    <a href="#" class="btn btn-info" role="button">Añadir</a>
                                                    <a href="#" class="btn btn-info" role="button">Eliminar</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-4">
                                        <div class="thumbnail">
                                            <img src="data:image/svg+xml;base64," alt="...">
                                            <div class="caption">
                                                <h3>Foto trasera</h3>
                                                <p>Adjuntar foto</p>
                                                <p>
                                                    <a href="#" class="btn btn-info" role="button">Añadir</a>
                                                    <a href="#" class="btn btn-info" role="button">Eliminar</a>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <p class="help-block">Seleccione las fotos.</p>
                            </div>
                            <div class="form-group">
                                <label for="ref">Seleccione las tallas</label>

                                <select class="selectpicker form-control" multiple data-selected-text-format="count > 3">
                                    <option>34</option>
                                    <option>35</option>
                                    <option>36</option>
                                    <option>37</option>
                                    <option>38</option>
                                    <option>39</option>
                                </select>

                                @Html.ValidationMessageFor(model => model.sRef)

                                <p class="help-block">Seleccione las tallas.</p>
                            </div>
                            <div class="panel panel-default panel-info">
                                <div class="panel-heading ">
                                    Cantidad existente para la talla: <span class="badge">33</span>
                                </div>
                                <div class="panel-body">
                                    <div class="form-group">
                                        <label for="ref">Ingrese la cantidad existente por talla</label>
                                        @Html.TextBoxFor(dina => dina.sRef,
                                         new
                                         {
                                             @class = "form-control",
                                             id = "ref",
                                             placeholder = "Cantidad existente por talla",
                                             maxlength = "100"
                                         })
                                        @Html.ValidationMessageFor(model => model.sRef)

                                        <p class="help-block">Ingrese la cantidad existente por talla.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel-footer">
                            <button type="submit" class="btn btn-default">+ Agregar otro color</button>
                        </div>
                    </div>
                    <div class="-xs-12 col-sm-12 col-md-6 col-lg-6">
                        <button type="submit" class="btn btn-success btn-block">Guardar</button>
                    </div>
                    <div class="-xs-12 col-sm-12 col-md-6 col-lg-6">
                        @Html.ActionLink("Cancelar", "TiposZapatos", "Shoes", new { }, new { @class = "btn btn-danger btn-block" })
                    </div>
                    @Html.HiddenFor(mdl => mdl.sColorDetail, new { @id = "sColorDetail" });
                }
            </div>
        </div>
    </div>

</section>

<script type="text/javascript">

    var arrObjColors = [];

    function preSave() {
        var myObject = {
            'IdColor': 6,
            'Size': 34,
            'Quantity': 5
        };



        $("#sColorDetail").val(jQuery.parseJSON(arrObjColors));
    }

</script>