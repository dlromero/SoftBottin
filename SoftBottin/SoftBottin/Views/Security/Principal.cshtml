<section class="app-seccion5" id="lastCollection">
    <div class="container">
        <div class="row">
            @foreach (System.Data.DataRow item in dsResult.Tables[0].Rows)
            {


                {
                    List<SoftBottin.Models.Shoes.cShoesByType>
                                query = (from rsl in poShoesByType.ToList()
                                         where rsl.iType.Equals(Convert.ToInt32(item["Id"].ToString()))
                                         select rsl).ToList();

                    if (query.ToList().Count > 0)
                    {
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                            <h1 class="app-titul-o"><span class="app-resaltar">&#128561; @item["Name"].ToString().ToUpper() &#128525;</span></h1>
                        </div>
                    }

                    foreach (SoftBottin.Models.Shoes.cShoesByType itShoe in query)
                    {
                        <text>
                            <div class="col-xs-12 col-sm-4 col-md-6 col-lg-4 app-margen-inferior-catalogo">

                                <div class="col-xs-12 col-sm-12 col-md-12 app-hover-detail">
                                    <h2 class="app-titulo2">
                                        @itShoe.sName
                                    </h2>
                                    <p class="app-separador"></p>
                                    <a href="#" class="thumbnail">
                                        <img src="@itShoe.simgSrc" alt="" class="img-responsive" style="width: 340px;height: 255px;">
                                    </a>

                                    <div class="app-detalle" onclick='location.href="@Url.Content("~/Security/ProductDetail?sProductReference=Tk5230")"'>
                                        Ver Detalle
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 ">
                                    <div class="col-xs-4 col-sm-4 col-md-5 app-info-purchase">
                                        <span class="pull-left glyphicon glyphicon-ok"></span>
                                        Existentes: 1
                                    </div>
                                    <div class="col-xs-4 col-sm-4 col-md-4 app-info-purchase">
                                        <span class="pull-left glyphicon glyphicon-adjust"></span>
                                        Colores: 2
                                    </div>
                                    <div class="col-xs-4 col-sm-4 col-md-3 app-info-purchase">
                                        <span class="pull-left glyphicon glyphicon-usd"></span>
                                        @itShoe.fSalePrice
                                    </div>
                                    <br />
                                    <br />
                                    <div class="col-xs-11 col-sm-11 col-md-11 col-xs-offset-1 col-sm-offset-1 col-md-offset-1 ">
                                        <span class="glyphicon glyphicon-shopping-cart app-glyphicon2" onclick="addProductToShoppingCart('553045','Tacón Charol Beige', '80000', 'red', '40')">
                                            Agregar
                                        </span>

                                        <span class=" glyphicon glyphicon-gift app-glyphicon2" onclick="goPurchasingSummary()">
                                            Comprar
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </text>
                    }
                }


            }


        </div>
    </div>
</section>


