<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Principal</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-touch-icon.png">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <link href="@Url.Content("~/Content/Boostrap/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Boostrap/bootstrap-theme.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Boostrap/main.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/Boostrap/Vendor/modernizr-2.8.3-respond-1.4.2.min.js")"></script>
    <link rel="stylesheet" href="@Url.Content("~/Content/Icomoon/style.css")">
</head>
<body>
    <header class="app-header">
        <nav class="navbar app-navbar navbar-fixed-top">
            <div class="container">
                <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10">
                    <div class="navbar-header" style="font-family:Juice ITC">
                        <button class="navbar-toggle" data-toggle="collapse" data-target="#menu">
                            <span class="icon-bar app-icon"></span>
                            <span class="icon-bar app-icon"></span>
                            <span class="icon-bar app-icon"></span>
                        </button>
                        @*<div class="col-xs-12 hidden-sm hidden-md hidden-lg">
                            @Html.ActionLink("BOTTINI", "Principal", "Security", new { }, new { @class = "navbar-brand app-link" })
                        </div>*@
                        @Html.ActionLink("BOTTINI", "Principal", "Security", new { }, new { @class = "navbar-brand app-link" })
                        @*<div class="hidden-xs col-sm-12 col-md-12 col-lg-12">
                            @Html.ActionLink("BOTTINI CALZADO Y ACCESORIOS", "Principal", "Security", new { }, new { @class = "navbar-brand app-link" })
                        </div>*@
                    </div>
                    <div class="collapse navbar-collapse" id="menu">
                        <ul class="nav navbar-nav navbar-right app-nav">
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Ultimas Colecciones 2016<b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="#">Tacones Abril 2016</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Botas Abril 2016</a></li>
                                    <li class="divider"></li>
                                    <li><a href="#">Estilo Militar Abril 2016</a></li>
                                </ul>
                            </li>
                            @if (Session["userName"] == null)
                            {
                                <li>
                                    <a href="" data-toggle="modal" data-target="#mdlogIn">
                                        Ingresa
                                    </a>
                                </li>
                                <li>
                                    <a href="" data-toggle="modal" data-target="#mdSignIn">
                                        Registrate
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        <b>@Session["userName"]</b><b class="caret"></b>
                                    </a>
                                    @if (Session["RoleID"].ToString() == "1")
                                    {
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Mi cuenta</a></li>
                                            <li class="divider"></li>
                                            <li>
                                                @Html.ActionLink("Tipos de Zapatos", "TiposZapatos", "Shoes")
                                            </li>
                                            <li class="divider"></li>
                                            <li>
                                                @Html.ActionLink("Colores", "Colores", "Shoes")
                                            </li>
                                            <li class="divider"></li>
                                            <li>
                                                @Html.ActionLink("Zapatos", "Zapatos", "Shoes")
                                            </li>
                                            <li class="divider"></li>
                                            <li>
                                                <a href="#">Promociones</a>
                                            </li>
                                            <li class="divider"></li>
                                            <li>
                                                @Html.ActionLink("Cerrar sesion", "LogOut", "Security")
                                            </li>
                                        </ul>
                                    }
                                    else if (Session["RoleID"].ToString() == "2")
                                    {
                                        <ul class="dropdown-menu">
                                            <li><a href="#">Mi cuenta</a></li>
                                            <li class="divider"></li>
                                            <li><a href="#">Mis pedidos</a></li>
                                            <li class="divider"></li>
                                            <li>
                                                @Html.ActionLink("Cerrar sesion", "LogOut", "Security")
                                            </li>
                                        </ul>

                                    }
                                </li>
                            }

                        </ul>
                    </div>
                </div>
                <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                    <span class="glyphicon glyphicon-shopping-cart app-glyphicon4 text-right" id="numberShoesPick">0</span>
                </div>

            </div>
        </nav>

        <div class="row">
            <div class="col-md-12 text-center navbar-fixed-top  app-alerta-terminado">
                <div class="alert alert-success " style="display:none;" role="alert" id="altSuccess">
                    <strong>Holy guacamole!</strong> You should check in on some of those fields below.
                </div>
            </div>
        </div>
    </header>


    <div id="mdlogIn" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Iniciar sesión</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4 col-md-offset-5">
                            <label class="app-form-group-input">Con Facebook:</label>
                            <fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
                            </fb:login-button>
                            <div id="status">
                            </div>
                        </div>
                    </div>

                    <form role="form" id="formSigIn">
                        <div class="form-group has-warning has-feedback app-form-group-input" id="formEmailLogIn">
                            <label for="EmailLogIn">¡Tu usuario o correo electrónico!</label>
                            <input type="text" class="form-control" id="tbEmailLogIn" placeholder="Escribe tu usuario o correo electrónico" required>
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback app-input-glyphicon" id="spGlyphiconEmailLogIn">
                            </span>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <div id="dvMessageEmailLogIn" class="help-block hidden">¡ Tu correo electrónico !</div>
                        </div>
                        <div class="form-group has-warning has-feedback app-form-group-input" id="formPasswordLogIn">
                            <label for="pwdLogIn">¡Tu contraseña!</label>
                            <input type="password" class="form-control" id="tbPasswordLogIn" placeholder="Escribe tu contraseña" required>
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback app-input-glyphicon" id="spGlyphiconPasswordLogIn">
                            </span>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <div id="dvMessagePasswordLogIn" class="help-block hidden">¡Tu contraseña!</div>
                        </div>
                        <div class="alert alert-danger" style="display:none;" role="alert" id="altErrorSigIn">
                            <strong>Error!</strong> El usuario o la contraseña son incorrectos.
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox"> Recuerdame</label>
                        </div>
                        <button type="submit" class="btn btn-success btn-block" id="btnSigIn" data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Cargando...">Ingresa</button>
                    </form>
                    <br />
                    <button type="button" class="btn btn-warning btn-block" id="bt_mdSignIn">¿No tienes cuenta? Registrate.</button>
                </div>
                <div class="modal-footer">
                </div>
            </div>

        </div>
    </div>

    <div id="mdSignIn" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Registrate</h4>
                </div>
                <div class="modal-body">

                    <div class="row">
                        <div class="col-md-4 col-md-offset-5">
                            <label class="app-form-group-input">Con Facebook:</label>
                            <fb:login-button scope="public_profile,email" onlogin="checkLoginState();">
                            </fb:login-button>
                            <div id="status">
                            </div>
                        </div>
                    </div>
                    <form role="form">
                        <div class="form-group has-warning has-feedback app-form-group-input" id="formFirstName">
                            <label for="FirstName">¡Tu nombre!</label>
                            <input type="text" class="form-control" id="tbFirstName">
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback app-input-glyphicon" id="spGlyphiconFirstName">
                            </span>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <div id="dvMessageFirstName" class="help-block hidden">¡Tu nombre!</div>
                        </div>
                        <div class="form-group has-warning has-feedback app-form-group-input" id="fromLastName">
                            <label for="LastName">¡Tu apellido!</label>
                            <input type="text" class="form-control" id="tbLastName">
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback app-input-glyphicon" id="spGlyphiconLastName">
                            </span>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <div id="dvMessageLastName" class="help-block hidden">¡Tu apellido!</div>
                        </div>
                        <div class="form-group has-warning has-feedback app-form-group-input" id="formEmailSigIn">
                            <label for="EmailSigIn">¡Tu correo electrónico!</label>
                            <input type="email" class="form-control" id="tbEmailSigIn">
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback app-input-glyphicon" id="spGlyphiconEmailSigIn">
                            </span>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <div id="dvMessageEmailSigIn" class="help-block hidden">¡Tu correo electrónico!</div>
                        </div>
                        <div class="form-group has-warning has-feedback app-form-group-input" id="formPasswordSigIn">
                            <label for="PasswordSigIn">¡Tu contraseña!</label>
                            <input type="password" class="form-control" id="tbPasswordSigIn">
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback app-input-glyphicon" id="spGlyphiconPasswordSigIn">
                            </span>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <div id="dvMessagePasswordSigIn" class="help-block hidden">¡Tu contraseña!</div>
                        </div>
                        <div class="form-group has-warning has-feedback app-form-group-input" id="formPasswordConfirmSigIn">
                            <label for="PasswordConfirmSigIn">¡Confirma tu contraseña, por seguridad!</label>
                            <input type="password" class="form-control" id="tbPasswordConfirmSigIn">
                            <span class="glyphicon glyphicon-warning-sign form-control-feedback app-input-glyphicon" id="spGlyphiconPasswordConfirmSigIn">
                            </span>
                            <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                            <div id="dvMessagePasswordConfirmSigIn" class="help-block hidden">¡Confirma tu contraseña, por seguridad!</div>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Registrate</button>
                    </form>
                </div>
                <div class="modal-footer">
                </div>
            </div>

        </div>
    </div>
    <section id="main">
        @RenderBody()
    </section>
    <footer class="app-footer">
        <div class="app-empresa">
            <h4>Bottini Calzado Accesorios</h4>
            <p>Si no lo vez lo inventamos. By FR - ZAW</p>
            <p>Este sitio fue hecho con pasión</p>
        </div>
        <span class="icon-facebook app-icon1"></span>
        <span class="icon-twitter app-icon1"></span>
        <span class="icon-google-plus app-icon1"></span>
    </footer>


